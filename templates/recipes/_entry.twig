{% extends 'layouts/main.twig' %}
{% block page_content %}
    <h1 class="font-bold text-4xl text-center">{{ entry.title }}</h1>
    <div class="w-[350px] mx-auto">
        <div class="grid grid-cols-2 mt-4">
            <div class="flex flex-col items-center p-4 text-lg">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-500">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                <p class="mt-2">Cooking Time</p>
                <p class="text-gray-500">{{ entry.cookingTime }}</p>
            </div>
            <div class="flex flex-col items-center p-4 text-lg">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 text-gray-500">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                  </svg>                  
                <p class="mt-2">Serves</p>
                <p class="text-gray-500">{{ entry.serves }}</p>
            </div>
        </div>
    </div>
    <div class="grid lg:grid-cols-3 mt-12 bg-blue-50">
        <div class="col-span-2 p-8 order-2 lg:order-1">
            <h2 class="text-3xl font-bold mb-6">How to make it</h2>
            <ul>
            {% set steps = entry.steps %}
            {% for step in steps %}
                <li>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                        </svg>
                        <h3 class="text-lg font-bold my-2 ml-2">Step {{ loop.index }}</h3>
                    </div>
                    <p>{{ step.stepInstructions }}</p>
                    <hr class="my-4">
                </li>            
            {% endfor %}
            </ul>
        </div>
        <div class="col-span-1 p-8 order-1">
            <div>
                <h2 class="text-3xl font-bold mb-6">Ingredients</h2>
                <ul class="max-w-[200px]">
                    {% set ingredients = entry.ingredients %}
                    {% for ingredient in ingredients %}
                        <li class="my-2">{{ ingredient.ingredient }}</li>
                        <hr class="my-4">
                    {% endfor %}
                </ul>
            </div>
            <div>
                <h2 class="text-xl font-bold my-6">Tags</h2>
                <div class="flex gap-2 ">
                {% set categories = entry.recipeType %}
                {% for category in categories %}
                    <p class="p-2 bg-[#FFC035] rounded-lg">{{ category.title }}</p>
                {% endfor %}
                
                {% set categories = entry.book %}
                {% for category in categories %}
                    <p class="p-2 bg-[#FFC035] rounded-lg">{{ category.title }}</p>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}